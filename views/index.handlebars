<center><h1>Eat-Da-Burger!</h1></center>

<main>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col-md-6">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<center><h4>Enter the burger you want to eat & hit the button!</h4></center>

<div class="row">
  <div class="col-md-12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Type Here">
      <button type="submit" class="addBurgerButton">Add A Burger</button>
    </form>
  </div>
</div>
